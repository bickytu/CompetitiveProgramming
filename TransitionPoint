class GfG {
    int transitionPoint(int arr[], int n) {
        
        int len = arr.length;
        int point = 0;
        for(int i=0;i<len-1;i++){
            if(arr[i]!=arr[i+1]) {
                point = i+1;
                break;
            }
        }
        
        if(point!=0)
        return point;
        
        if(arr[0]==0)
        return -1;
        
        else
        return 0;
    }
}
